{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Manifest",
  "properties": {
    "metadata": { "$ref": "#/$defs/Metadata" },
    "paths": {
      "type": "object",
      "properties": {
        "footnotes": {
          "type": "string",
          "pattern": "\\.json\\s*$"
        },
        "source": { "$ref": "#/$defs/FilePaths" },
        "epub": { "$ref": "#/$defs/FilePaths" },
        "output": { "$ref": "#/$defs/OutputPaths" }
      },
      "additionalProperties": false
    },
    "files": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/$defs/htmlFilename" },
          { "$ref": "#/$defs/imageFilename" },
          { "$ref": "#/$defs/stylesFilename" },
          { "$ref": "#/$defs/fontFilename" },
          { "$ref": "#/$defs/Section" },
          { "$ref": "#/$defs/Image" },
          { "$ref": "#/$defs/Content" },
          { "$ref": "#/$defs/Factory" },
          { "$ref": "#/$defs/Styles" },
          { "$ref": "#/$defs/Font" }
        ]
      }
    }
  },
  "required": ["files"],
  "$defs": {
    "FilePaths": {
      "type": "object",
      "properties": {
        "htmlPath": { "type": "string" },
        "imagePath": { "type": "string" },
        "stylePath": { "type": "string" },
        "fontPath": { "type": "string" },
        "navPath": { "type": "string" }
      },
      "additionalProperties": false
    },
    "OutputPaths": {
      "type": "object",
      "properties": {
        "epubPath": { "type": "string" },
        "explodedEpubPath": { "type": "string" },
        "combinedHtmlPath": { "type": "string" },
        "combinedPathToStyles": { "type": "string" }
      },
      "additionalProperties": false
    },
    "title": { "type": "string" },
    "htmlFilename": {
      "type": "string",
      "pattern": "\\.(xhtml|html|htm)\\s*$"
    },
    "imageFilename": {
      "type": "string",
      "pattern": "\\.(jpg|jpeg|gif|png)\\s*$"
    },
    "stylesFilename": {
      "type": "string",
      "pattern": "\\.css\\s*$"
    },
    "fontFilename": {
      "type": "string",
      "pattern": "\\.(otf|ttf)\\s*$"
    },
    "Section": {
      "type": "object",
      "properties": {
        "_tag": { "type": "string", "enum": ["SECTION"] },
        "filename": { "$ref": "#/$defs/imageFilename" },
        "title": { "type": "string" },
        "level": { "type": "integer" },
        "landmark": { "type": "string" },
        "toc": { "type": "boolean" },
        "pageNumber": { "$ref": "#/$defs/PageNumber" }
      },
      "required": ["_tag", "title", "filename"],
      "additionalProperties": false
    },
    "Image": {
      "type": "object",
      "properties": {
        "_tag": { "type": "string", "enum": ["IMAGE"] },
        "caption": { "type": "string" },
        "filename": { "$ref": "#/$defs/imageFilename" },
        "level": { "type": "integer" },
        "landmark": { "type": "string" },
        "illustration": { "type": "boolean" },
        "toc": { "type": "boolean" },
        "pageNumber": { "$ref": "#/$defs/PageNumber" }
      },
      "required": ["_tag", "caption", "filename"],
      "additionalProperties": false
    },
    "Content": {
      "type": "object",
      "properties": {
        "_tag": { "type": "string", "enum": ["CONTENT"] },
        "title": { "type": "string" },
        "filename": { "$ref": "#/$defs/htmlFilename" },
        "landmark": { "type": "string" },
        "toc": { "type": "boolean" },
        "bodyClass": { "type": "string" }
      },
      "required": ["_tag", "filename"],
      "additionalProperties": false
    },
    "Factory": {
      "type": "object",
      "properties": {
        "_tag": { "type": "string", "enum": ["FACTORY"] },
        "title": { "type": "string" },
        "filename": { "$ref": "#/$defs/htmlFilename" },
        "landmark": { "type": "string" },
        "toc": { "type": "boolean" },
        "factory": { "type": "string" },
        "bodyClass": { "type": "string" },
        "pageNumber": { "$ref": "#/$defs/PageNumber" }
      },
      "required": ["_tag", "factory", "filename"],
      "additionalProperties": false
    },
    "Styles": {
      "type": "object",
      "properties": {
        "_tag": { "type": "string", "enum": ["STYLES"] },
        "filename": { "$ref": "#/$defs/stylesFilename" }
      },
      "required": ["_tag", "filename"],
      "additionalProperties": false
    },
    "Font": {
      "type": "object",
      "properties": {
        "_tag": { "type": "string", "enum": ["FONT"] },
        "filename": { "$ref": "#/$defs/fontFilename" }
      }
    },
    "UUID": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "PageNumber": { "type": "string", "pattern": "([0-9]+|[ivxmcIVXMC]+)" },
    "Metadata": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "pubId": { "$ref": "#/$defs/UUID" },
        "author": { "type": "string" },
        "publisher": { "type": "string" }
      }
    }
  }
}
